<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="resultViewModel"
            type="com.example.guessinggame.ResultViewModel"
            tools:context=".ResultFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16sp"
        android:background="@drawable/customborder">

        <TextView
            android:id="@+id/result_tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:gravity="center"
            android:background="@color/cultured"
            android:textColor="@color/dark_jungle_green"
            android:textAlignment="center"
            android:text="@{resultViewModel.result}" />

        <Button
            android:id="@+id/result_bt_playAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play Again"
            android:backgroundTint="@color/polished_pine"
            android:layout_gravity="center"/>
    </LinearLayout>
</layout>
